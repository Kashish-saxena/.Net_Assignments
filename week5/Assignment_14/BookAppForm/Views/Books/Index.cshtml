@model IEnumerable<Book>

@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>
<p>
    @Html.ActionLink("Add New Book", "Create")
</p>

<table class="table table-bordered">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th></th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = book.Id })
            </td>
        </tr>
    }
</table>
